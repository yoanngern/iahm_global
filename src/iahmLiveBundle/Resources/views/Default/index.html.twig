<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{{ video.title }}</title>

    <meta name="description" content="{{ video.desc }}">

    <meta name="viewport"
          content="initial-scale=1, width=device-width, minimum-scale=1, user-scalable=no, maximum-scale=1, width=device-width, minimal-ui">

    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"/>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}"/>

    <link rel="stylesheet" href="{{ asset('css/iahm_live.css') }}" type="text/css"/>


</head>
<body>


<section class="content">

    {% spaceless %}

        <header>
            <a href="/" class="image" style="background-image: url('{{ asset('images/' ~ video.header_img) }}')"></a>
        </header>

        <article class="video">

            <iframe width="100%" height="100%"
                    src="https://www.youtube.com/embed/{{ video.youtube_id }}?rel=0&amp;showinfo=0"
                    frameborder="0" allowfullscreen></iframe>

        </article>

        <article class="pubs">


            {% for ad in ads %}
                <div class="pub">
                    <div class="item">
                        <a target="_blank"
                           title="{{ ad.title }}"
                           href="{{ ad.url }}"
                           style="background-image: url('{{ asset('images/' ~ ad.image) }}')">
                        </a>
                    </div>
                </div>
            {% endfor %}
        </article>

        <article class="more">
            {% for ad in sub_ads %}
                <div class="pub">
                    <div class="item">
                        <a target="_blank"
                           title="{{ ad.title }}"
                           href="{{ ad.url }}"
                           style="background-image: url('{{ asset('images/' ~ ad.image) }}')">
                        </a>
                    </div>
                </div>
            {% endfor %}
        </article>

        <footer>

            <a id="logo_aimg" target="_blank" href="http://www.laguerison.org"></a>

        </footer>

    {% endspaceless %}

</section>


</body>
</html>